generator client {
  provider = "prisma-client-js"

  seed = "ts-node prisma/seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Sexo {
  M
  F
}

model Developer {
  id             Int      @id @default(autoincrement())
  nivelId        Int
  nome           String
  sexo           Sexo
  dataNascimento DateTime
  hobby          String
  nivel          Levels   @relation(fields: [nivelId], references: [id])

  @@map("desenvolvedores")
}

model Levels {
  id         Int         @id @default(autoincrement())
  nivel      String      @unique
  developers Developer[]

  @@map("niveis")
}
